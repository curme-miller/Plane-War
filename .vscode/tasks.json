{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++:build",
			"command": "E:\\TDM-gcc\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-L",
				"E:\\TDM-gcc\\x86_64-w64-mingw32\\lib",
				"-lEasyX",
